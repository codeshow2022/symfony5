{% extends 'base.html.twig' %}
{% block title %}List Addresses{% endblock %}

 {% block body %}
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-borderless">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Street Address</th>
                    <th>Birthday</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for address in data.addresses %}
                    <tr>
                        <td><a href="{{ path('app_address_view', {'address': address.id}) }}">{{ address.name }}</a></td>
                        <td>{{ address.phone }}</td>
                        <td>{{ address.streetAddress }}</td>
                        <td>{{ (address.birthday) ? address.birthday|date('M n') : '--' }}</td>
                        <td><a href="{{ path('app_address_edit', {'address': address.id}) }}" class="btn btn-sm btn-primary">EDIT</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
 {% endblock %}
